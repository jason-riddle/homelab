export OBJC_DISABLE_INITIALIZE_FORK_SAFETY := YES

## Compose

## ESPHome

esphome:
	esphome run airgradient.yml --device http://192.168.1.232

esphome-usb:
	esphome run airgradient.yml --device /dev/cu.usbserial-2130

## Kubernetes

## Maintenance

ping:
	ansible all --module-name ansible.builtin.ping --args="data=pong" --ask-pass

reboot:
	ansible all --module-name ansible.builtin.reboot --args="reboot_timeout=300" --ask-pass

upgrade:
	ansible-playbook maintenance/tasks/upgrade.yml --ask-pass --ask-become-pass

## Provisioning

setup:
	ansible-playbook provisioning/tasks/setup.yml --ask-pass --ask-become-pass

tailscale:
	ansible-playbook provisioning/tasks/tailscale.yml --ask-pass --ask-become-pass

## Development

deps:
	ansible-galaxy install --role-file requirements.yml --force
